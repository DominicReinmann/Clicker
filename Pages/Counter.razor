@page "/counter"

@layout MainLayout

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="possible-upgrades">
                <h2>Mögliche Upgrades</h2>
                <!-- Hier kommt die Logik für mögliche Upgrades hin -->
            </div>
        </div>

        <div class="col-md-4 text-center">
            <div class="score-display">
                <h2>Score</h2>
                <p>@score</p>
            </div>
            <button class="btn btn-primary clicker-button" @onclick="IncrementScore">Clicker</button>
        </div>

        <div class="col-md-4">
            <div class="active-upgrades">
                <h2>Aktive Upgrades</h2>
                <!-- Hier kommt die Logik für aktive Upgrades hin -->
            </div>
        </div>
    </div>
</div>

@code {
    private int score = 0;

    private void IncrementScore()
    {
        score++; // Hier könnte die Logik erweitert werden, um Upgrades zu berücksichtigen
    }
}